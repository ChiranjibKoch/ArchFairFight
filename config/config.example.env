# Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id
API_HASH=your_api_hash

# Userbot Sessions (comma-separated list of session file paths)
USERBOT_SESSIONS=sessions/userbot1.session,sessions/userbot2.session
MAX_USERBOTS=5

# Database Settings
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=archfairfight

# Challenge Settings
CHALLENGE_TIMEOUT=30
MAX_FIGHT_DURATION=300
MONITORING_INTERVAL=10

# Recording Settings
RECORDINGS_PATH=./recordings
MAX_RECORDING_SIZE=500

# AI Features
ENABLE_AI_WINNER_DETECTION=false
ENABLE_AUTO_MODERATION=false
VOLUME_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true